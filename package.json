{
  "name": "sample_client",
  "version": "0.0.1",
  "description": "Barebone Electron client that loads a URL from config.json",
  "main": "main.js",
  "author": {
    "name": "Francesco Galasso",
    "email": "info@alfadispenser.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --publish=never",
    "dist:linux": "electron-builder --linux --publish=never",
    "dist:win": "electron-builder --win --publish=never"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^26.0.0"
  },
  "build": {
    "appId": "barebone-electron-client",
    "productName": "MyElectronClient",
    "files": [
      "main.js",
      "config.json",
      "renderer/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}

